---
import { buttonVariants } from "@/components/ui/button";
import PasswordItem from "../../components/PasswordItem.astro";
import UserMenu from "../../components/UserMenu.astro";
import Layout from "../../layouts/Layout.astro";
import { getPasswords } from "@/data/passwords";

const addPasswordUrl = new URL("/app/add-password", Astro.url);
const passwords = await getPasswords();
---

<Layout title="Password Manager">
  <main class="mx-auto max-w-[600px]">
    <div class="mb-8 flex justify-between items-end">
      <div>
        <h1 class="text-2xl font-medium">Contrase単as</h1>
        <p class="text-gray-400 text-sm">
          Todas tus contrase単as seguras y accesibles desde cualquier
          dispositivo!
        </p>
      </div>
      <UserMenu />
    </div>

    <div>
      <div class="flex justify-center mb-8">
        <a
          href={addPasswordUrl}
          class={buttonVariants({ variant: "primary" })}>A単adir Contrase単a</a
        >
      </div>
      {
        passwords.map((item) => {
          return <PasswordItem item={item} />;
        })
      }
    </div>
  </main>
</Layout>
