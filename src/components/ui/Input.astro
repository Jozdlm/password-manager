---
import type { JSX } from "astro/jsx-runtime";

interface Props extends JSX.InputHTMLAttributes {
  type: JSX.HTMLInputTypeAttribute;
  placeholder?: string;
  name: string;
  id: string;
}

const { type, placeholder = "", name, id, value, readonly } = Astro.props;
---

<input
  type={type}
  class="form-input py-2 px-3 rounded-md text-sm bg-transparent border border-slate-600 w-full"
  placeholder={placeholder}
  id={id}
  name={name}
  value={value}
  readonly={readonly || false}
/>
