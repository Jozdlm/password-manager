---
import { buttonVariants } from "./ui/button";

interface NavItemLink {
  path: string;
  name: string;
}

const navItemLinks: NavItemLink[] = [
  { path: "/", name: "Inicio" },
  { path: "/features", name: "Características" },
  { path: "/pricing", name: "Precios" },
];
---

<div class="w-[1100px] mx-auto flex justify-between">
  <section class="flex gap-x-12 items-center">
    <a href="/" class="font-medium text-lg">Secret Saver</a>
    <nav>
      {
        navItemLinks.map((item) => (
          <a href={item.path} class={buttonVariants({ variant: "link" })}>
            {item.name}
          </a>
        ))
      }
    </nav>
  </section>
  <section>
    <a href="/login" class={buttonVariants({ variant: "outline" })}
      >Iniciar Sesión</a
    >
    <a href="/signup" class={buttonVariants({ variant: "primary" })}
      >Crear Cuenta</a
    >
  </section>
</div>
